<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Container principal-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:orientation="vertical">

        <!--Container de Título do App-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:background="@color/design_default_color_primary_dark"
            android:textColor="@color/black"
            android:textSize="24sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Calculadora"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <!--Caixa de Resultado-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:background="@color/white"
            android:textColor="@color/white"
            android:textSize="24sp">

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <!--Container dos botões-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Botões das operações-->
            <TableRow>

                <Button
                    android:id="@+id/btnSoma"
                    android:layout_height="200px"
                    android:layout_margin="5dp"
                    android:text="+"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btnSubtrair"

                    android:layout_height="200px"
                    android:layout_margin="5dp"
                    android:text="-"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btnDivisao"

                    android:layout_height="200px"
                    android:layout_margin="5dp"
                    android:text="/"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btnMult"

                    android:layout_height="200px"
                    android:layout_margin="5dp"
                    android:text="*"
                    android:textSize="24dp"></Button>
            </TableRow>

            <!--Botões numéricos-->
            <RelativeLayout android:layout_margin="5px">

                <Button
                    android:id="@+id/btn8"

                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:text="8"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btn7"

                    android:layout_width="300px"
                    android:layout_height="300px"

                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="7"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btn9"

                    android:layout_width="300px"
                    android:layout_height="300px"

                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="9"
                    android:textSize="24dp"></Button>
            </RelativeLayout>

            <!--Botões numéricos-->
            <RelativeLayout android:layout_margin="5px">

                <Button
                    android:id="@+id/btn5"

                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:text="5"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btn4"

                    android:layout_width="300px"
                    android:layout_height="300px"

                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="4"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btn6"

                    android:layout_width="300px"
                    android:layout_height="300px"

                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="6"
                    android:textSize="24dp"></Button>
            </RelativeLayout>

            <!--Botões numéricos-->
            <RelativeLayout android:layout_margin="5px">

                <Button
                    android:id="@+id/btn2"

                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:text="2"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btn1"

                    android:layout_width="300px"
                    android:layout_height="300px"

                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="1"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btn3"

                    android:layout_width="300px"
                    android:layout_height="300px"

                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="3"
                    android:textSize="24dp"></Button>
            </RelativeLayout>

            <!--Botão Zero, Limpar e Resultado-->
            <RelativeLayout android:layout_margin="5px">

                <Button
                    android:id="@+id/btnLimpa"

                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:text="Limpa"
                    android:textSize="24dp"></Button>

                <Button
                    android:id="@+id/btn0"

                    android:layout_width="300px"
                    android:layout_height="300px"

                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="0"
                    android:textSize="20dp"></Button>

                <Button
                    android:id="@+id/btnResult"

                    android:layout_width="300px"
                    android:layout_height="300px"

                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="="
                    android:textSize="24dp"></Button>
            </RelativeLayout>
        </TableLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>